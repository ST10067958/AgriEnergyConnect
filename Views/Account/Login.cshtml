@{
    ViewData["Title"] = "Login";
}

<h2 class="text-primary mb-4"><i class="bi bi-box-arrow-in-right"></i> Login</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Error
    </div>
}

<form method="post" class="card p-4 shadow-sm bg-white">

    <!-- Username -->
    <div class="mb-3">
        <label for="username" class="form-label">Username:</label>
        <input type="text" name="username" class="form-control" placeholder="e.g. farmer1" required />
    </div>

    <!-- Password -->
    <div class="mb-3">
        <label for="password" class="form-label">Password:</label>
        <input type="password" name="password" class="form-control" placeholder="Enter your password" required />
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-box-arrow-in-right"></i> Login
    </button>
</form>
