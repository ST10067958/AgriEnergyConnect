@model AgriEnergyConnect.Models.Farmer

@{
    ViewData["Title"] = "Add Farmer";
}

<h2 class="text-primary mb-4"><i class="bi bi-person-plus-fill"></i> Add New Farmer</h2>

@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

@if (ViewBag.ModelErrors != null)
{
    <div class="alert alert-warning">
        <ul>
            @foreach (var err in ViewBag.ModelErrors)
            {
                <li>@err</li>
            }
        </ul>
    </div>
}


<form asp-action="AddFarmer" method="post" class="card p-4 shadow-sm bg-white">
    @Html.AntiForgeryToken()

    <!-- Name -->
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Full Name:</label>
        <input asp-for="Name" class="form-control" placeholder="e.g. Thabo Mokoena" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Email -->
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email Address:</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="e.g. thabo@farm.co.za" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Location -->
    <div class="mb-3">
        <label asp-for="Location" class="form-label">Farm Location:</label>
        <input asp-for="Location" class="form-control" placeholder="e.g. Limpopo" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="bi bi-person-plus"></i> Save Farmer
    </button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
